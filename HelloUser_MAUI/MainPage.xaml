<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HelloUser_MAUI.MainPage">

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Entry x:Name="UserNameEntry" Placeholder="Enter Your Name" Grid.Row="0"/>
        <Button x:Name="SubmitButton" Text="Submit" Grid.Row="1" Clicked="OnSubmitButtonClicked" />
    </Grid>
    
</ContentPage>
